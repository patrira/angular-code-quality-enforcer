{
    "root": true,
    "overrides": [
      {
        "files": ["*.ts"],
        "parserOptions": {
          "project": ["tsconfig.json"],
          "createDefaultProgram": true
        },
        "extends": ["plugin:@angular-eslint/recommended"],
        "rules": {
          "no-console": "warn",
          "semi": ["error", "always"]
        }
      },
      {
        "files": ["*.html"],
        "extends": ["plugin:@angular-eslint/template/recommended",
        "plugin:@angular-eslint/recommended",
        "plugin:prettier/recommended"],
        "rules": {}
      }
    ]
  }
  